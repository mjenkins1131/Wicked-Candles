
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    img {
        
        height: 100px;
        width: 100px;
        padding-top:50px;
        align-content:center;
    }
</style>
<div class="shop-area pt-100 pb-70">
    <div class="container-fluid">
        <div class="shop-title-text text-center">
            <h2 style="padding-bottom:50px">awesome collection 2017 </h2>
        </div>
        <div class="shop-style-all mt-50">
            <div class="row">
                <div class="grid">

                    @foreach (var i in Model)
                    {
                    <div class="col-md-3 col-sm-6 col-xs-12 grid-item cat1">
                        <div class="shop hover-style mb-30">
                            <div class="shop-img">
                                <a href="preduct-details.html"></a>
                                <div class="shop-title title-style-1">
                                    <h3><a href="preduct-details.html"> @i.ProductName</a></h3>
                                    <img src="~/Content/img/product/@(i.ProductID).jpg" alt="" />
                                    <span class="new-price">@i.ProductPrice</span>
                                </div>
                                <div class="product-cart">
                                    <a href="#"><i class="pe-7s-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

